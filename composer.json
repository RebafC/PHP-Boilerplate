{
    "name": "rebafc/php-boilerplate",
    "description": "Simple boilerplate for PHP Application",
    "type": "project",
    "minimum-stability": "dev",
    "require": {
        "php": "^7.3",
        "altorouter/altorouter": "^2.0",
        "gabordemooij/redbean": "dev-master",
        "plasticbrain/php-flash-messages": "^1.0",
        "tracy/tracy": "^2.8",
        "twig/twig": "^3.0"
    },
    "require-dev": {
        "approvals/approval-tests": "dev-Main",
        "phpunit/phpunit": "^9",
        "rector/rector": "dev-main"
    },
    "autoload": {
        "psr-4": {
            "App\\": [
                "src/"
            ]
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/phpunit"
        }
    },
    "authors": [
        {
            "name": "rebafc",
            "email": "chris@midboh.com.au"
        }
    ],
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "rector": "vendor/bin/rector"
    }
}
